<!-- Hero Section -->
<section class="hidden md:flex relative w-full h-screen flex items-center justify-center">
  <!-- Background Image with rounded corners -->
  <div class="w-2/3 h-5/6 rounded-2xl overflow-hidden relative">
    <%= image_tag "hero.jpg", 
        alt: "Lisbon Street", 
        class: "w-full h-full object-cover" %>
    <div class="absolute inset-0 bg-black/20"></div>
    
    <!-- Logo and Content Overlay -->
    <div class="absolute inset-0 flex flex-col items-center justify-center text-center z-10">
      <!-- Logo -->
      <div class="mb-16">
        <%= image_tag "logo.png", 
            alt: "Light Corner House Logo", 
            class: "h-96 mx-auto" %>
      </div>
      
      <!-- Scroll Down Button -->
      <div class="mt-8 flex justify-center">
        <a href="#welcome-sections" class="scroll-smooth w-12 h-12 rounded-full border-2 border-white flex items-center justify-center text-white hover:bg-white hover:text-black transition-all duration-300 cursor-pointer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Welcome Sections -->
<div id="welcome-sections" class="py-16 md:py-24">
  
  <!-- Section 1: Welcome To Portugal -->
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
      <!-- Image -->
      <div class="relative lg:col-span-6">
        <div class="relative rounded-2xl overflow-hidden">
          <%= image_tag "welcome.png", 
              alt: "Welcome to Portugal", 
              class: "w-full h-[400px] md:h-[500px] object-cover" %>
          <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-black/30"></div>
        </div>
      </div>

      <!-- Content -->
      <div class="flex flex-col gap-6 justify-center px-4 lg:px-8 lg:col-span-6">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800">
          Welcome To Lisbon!
        </h2>
        <p class="text-base md:text-lg text-gray-600 leading-relaxed">
          Come and explore the historic city of Lisbon while enjoying the traditionality 
          of our cozy rooms in a simple yet elegant way. Lightcornerhouse is located in 
          the typical neighborhood of Lisbon, enabling you to reach top attractions in 
          minutes. Hope you enjoy!
        </p>
        <div class="flex justify-start">
          <%= link_to rooms_path do %>
            <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-8 py-3 rounded-lg transition-all duration-300 uppercase font-semibold text-sm tracking-wider">
              Take a look
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Section 2: Belém Tower -->
  <div class="max-w-7xl mx-auto px-6 mt-16 md:mt-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
      <!-- Content -->
      <div class="flex flex-col gap-6 justify-center px-4 lg:px-8 order-2 lg:order-1 lg:col-span-6">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800">
          Discover the Majesty of Belém Tower
        </h2>
        <p class="text-base md:text-lg text-gray-600 leading-relaxed">
          Standing proudly by the Tagus River, Belém Tower is Lisbon's gateway to centuries of exploration and discovery. Feel the mystique of Portugal’s Age of Discoveries and marvel at the intricate Manueline details of this UNESCO World Heritage Site. The sunset over its silhouette offers one of the city’s most enchanting spectacles.
        </p>
        <div class="flex justify-start">
          <%= link_to tours_path do %>
            <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-8 py-3 rounded-lg transition-all duration-300 uppercase font-semibold text-sm tracking-wider">
              Take a look
            </button>
          <% end %>
        </div>
      </div>

      <!-- Image -->
      <div class="relative order-1 lg:order-2 lg:col-span-6">
        <div class="relative rounded-2xl overflow-hidden">
          <%= image_tag "tower.jpg", 
              alt: "Belém Tower", 
              class: "w-full h-[400px] md:h-[500px] object-cover" %>
          <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-black/30"></div>
        </div>
      </div>
    </div>
  </div>

</div>
